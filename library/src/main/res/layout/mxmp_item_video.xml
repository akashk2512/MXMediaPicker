<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:app = "http://schemas.android.com/apk/res-auto"
	android:layout_width = "match_parent"
	android:layout_height = "wrap_content">

	<ImageView
		android:id = "@+id/mxmp_item_video_thumb"
		android:layout_width = "0dp"
		android:layout_height = "0dp"
		android:layout_margin = "1px"
		android:scaleType = "centerCrop"
		app:layout_constraintBottom_toBottomOf = "parent"
		app:layout_constraintDimensionRatio = "1"
		app:layout_constraintEnd_toEndOf = "parent"
		app:layout_constraintStart_toStartOf = "parent"
		app:layout_constraintTop_toTopOf = "parent" />

	<TextView
		android:id = "@+id/mxmp_item_video_duration"
		android:layout_width = "wrap_content"
		android:layout_height = "wrap_content"
		android:background = "#80000000"
		android:drawablePadding = "8dp"
		android:gravity = "center_vertical"
		android:paddingStart = "8dp"
		android:paddingTop = "4dp"
		android:paddingEnd = "8dp"
		android:paddingBottom = "4dp"
		android:text = "00:00"
		android:textColor = "@color/white"
		android:textSize = "12sp"
		app:drawableStartCompat = "@drawable/ic_video"
		app:drawableTint = "@color/white"
		app:layout_constraintBottom_toBottomOf = "@id/mxmp_item_video_thumb"
		app:layout_constraintEnd_toEndOf = "@id/mxmp_item_video_thumb" />

	<include layout = "@layout/include_selected_mask" />
</androidx.constraintlayout.widget.ConstraintLayout>